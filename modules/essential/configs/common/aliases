# General aliases configuration (bash-compatible)
# This file contains general aliases that can be used across shells

# File management
alias v="bat"
alias x="rm -rf"

# Git aliases
alias gi="git init; git branch -M main"
alias gs="git status"
alias gb="git branch"
alias gck="git checkout"
alias gd="git diff"
alias gl="git log" 
alias gc="git commit"
alias gr="git remote"
alias gx="git reset --hard"